{
  "name": "portfolio-os",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "react-router dev --host",
    "debug": "NODE_OPTIONS='--inspect-brk' npm run dev",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "react-router typegen && tsc --watch",
    "typegen": "wrangler types",
    "build": "react-router build",
    "deploy": "pnpm run build && wrangler deploy",
    "preview": "pnpm run build && vite preview",
    "compile": "dotenv -e .env.local graphql-codegen",
    "watch": "dotenv -e .env.local graphql-codegen -w"
  },
  "dependencies": {
    "@react-router/cloudflare": "^7.13.0",
    "@react-router/fs-routes": "^7.13.0",
    "@tailwindcss/vite": "^4.1.18",
    "classnames": "^2.5.1",
    "graffle": "8.0.0-next.174",
    "isbot": "^5.1.34",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-draggable": "^4.5.0",
    "react-router": "^7.13.0",
    "react-simple-typewriter": "^5.0.1",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.22.1",
    "@cloudflare/workers-types": "^4.20260131.0",
    "@eslint/compat": "^2.0.2",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@graphql-codegen/cli": "^6.1.1",
    "@graphql-codegen/client-preset": "^5.2.2",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@playwright/test": "^1.57.0",
    "@react-router/dev": "^7.13.0",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "dotenv-cli": "^11.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "graphql": "^16.12.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.5",
    "wrangler": "^4.61.1"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.29.1"
}
